            <Table headerText="Žádanky" items="{/}">
                <columns>
                    <Column>
                        <header>
                            <Text text="{/#ZgisZadankaOD/ZzZadankaId/@sap:label}"/>
                            <Text text="Číslo žádanky GIS"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{/#ZgisZadankaOD/ZzZadankaTyp/@sap:label}"/>
                            <Text text="Typ žádanky"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{/#ZgisZadankaOD/ZzZadankaDatum/@sap:label}"/>
                            <Text text="Datum žádosti"/>
                        </header>
                    </Column>
                    <Column hAlign="Center">
                        <header>
                            <Text text="{/#ZgisZadankaOD/ZzZadankaSchvaleno/@sap:label}"/>
                            <Text text="Žádanka schválena"/>
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Active" press=".handlePressItem">
                        <cells>
                            <!--<Text class="boldText" text="1234"/>-->
                            <Label text="{ZzZadankaId}" design="Bold"/>
                            <ObjectStatus text="Žádanka: {ZzZadankaTyp}" state="{ path: 'ZzZadankaTyp', formatter: '.formatter.setState' }" inverted="true"/>
                            <Text text="{ZzZadankaDatum}"/>
                            <CheckBox selected="{ZzZadankaSchvaleno}" displayOnly="true"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>  
